<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1B232A">
    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="250dp"
        android:layout_height="257dp"
        android:src="@drawable/home1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <View
        android:id="@+id/view_top"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        app:layout_constraintTop_toTopOf="parent"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_drawer"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_margin="12dp"
        android:src="@drawable/icon_drawer"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_top"/>
<!--    <androidx.appcompat.widget.AppCompatImageView-->
<!--        android:id="@+id/iv_choose_server"-->
<!--        android:layout_width="32dp"-->
<!--        android:layout_height="32dp"-->
<!--        android:layout_marginRight="16dp"-->
<!--        android:src="@drawable/icon_choose_server"-->
<!--        app:layout_constraintRight_toRightOf="parent"-->
<!--        app:layout_constraintTop_toTopOf="@id/iv_drawer"-->
<!--        app:layout_constraintBottom_toBottomOf="@id/iv_drawer"/>-->
    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/llc_choose_server"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:gravity="center_vertical"
        android:background="@drawable/bg_161c22_12dp"
        app:layout_constraintTop_toBottomOf="@id/iv_drawer">
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_logo"
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:src="@drawable/fast"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Faster Server"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:layout_marginLeft="12dp"/>
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/icon_right"/>
    </androidx.appcompat.widget.LinearLayoutCompat>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_connect_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:00:00"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginTop="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/llc_choose_server"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="match_parent"
        android:layout_height="162dp"
        android:src="@drawable/home2"
        app:layout_constraintTop_toBottomOf="@id/tv_connect_time"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_center"
        android:layout_width="wrap_content"
        android:layout_height="220dp"
        android:src="@drawable/home3"
        android:layout_marginTop="2dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_connect_time"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_connect_btn_bg"
        android:layout_width="195dp"
        android:layout_height="60dp"
        android:src="@drawable/home6"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_center"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/llc_connect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toTopOf="@id/iv_connect_btn_bg"
        app:layout_constraintLeft_toLeftOf="@id/iv_connect_btn_bg"
        app:layout_constraintBottom_toBottomOf="@id/iv_connect_btn_bg">
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="124dp"
            android:layout_height="49dp"
            android:src="@drawable/home7"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_connect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Connect"
            android:textSize="13sp"
            android:textStyle="bold"
            android:textColor="#171D22"
            android:layout_marginRight="12dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_connect"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/home8"
            android:layout_marginLeft="15dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <View
        android:id="@+id/guide_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#99000000"/>
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/guide_lottie_view"
        android:layout_width="270dp"
        android:layout_height="150dp"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        android:layout_marginTop="190dp"
        app:lottie_fileName="guide.zip"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_connect_time"/>
</androidx.constraintlayout.widget.ConstraintLayout>